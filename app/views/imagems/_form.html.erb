<%= simple_form_for(@imagem, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :arquivo, :as => 'file' %>
    <%= f.input :nome, :hint => 'Ex: sala, quarto...' %>
    <%= f.input :capa %>
    <%= f.association :imovel %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
