<h2>Mude sua Senha</h2>

<%= simple_form_for(resource, :html => { :class => 'form-horizontal' }, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => "Nova Senha", :required => true %>
    <%= f.input :password_confirmation, :label => "Confirme sua nova senha", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Mude minha senha" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
